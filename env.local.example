DPD_API_KEY=your_dpd_api_key

# Invoicing
INVOICE_PROVIDER=mock
INVOICE_DEFAULT_VAT=19

# Email Configuration
EMAIL_PROVIDER=resend
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM="Your App Name <no-reply@yourdomain.com>"
