# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require

# Authentication
LUCIA_SECRET=your_lucia_secret_key_here

# Site Configuration
SITE_URL=http://localhost:3000
NODE_ENV=development
APP_BASE_URL=https://your-domain.com

# Shipping APIs
CARGUS_API_BASE=https://api.cargus.ro
CARGUS_API_KEY=your_cargus_api_key
